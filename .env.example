# Copy to .env and fill in values
# Example environment variables for Dream Decol backend

# Full MongoDB connection string (do NOT commit secrets to Git)
# Example:
# MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.1jag5yi.mongodb.net/dream_decol?retryWrites=true&w=majority
MONGODB_URI=

# App settings
PORT=5000
NODE_ENV=production
JWT_SECRET=your_jwt_secret
JWT_EXPIRE=1d

# File uploads
UPLOAD_PATH=uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# CORS (comma-separated origins) or '*' to allow all
CORS_ORIGIN=*
