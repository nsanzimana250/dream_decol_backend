{
  "name": "dream-decol-backend",
  "version": "1.0.0",
  "description": "Backend API for Dream Decol furniture store",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "seed": "node scripts/seedProducts.js",
    "clear:db": "node scripts/clearDatabase.js",
    "migrate:atlas": "node scripts/atlasMigration.js --full",
    "migrate:atlas:drop": "node scripts/atlasMigration.js --migrate --clear-atlas",
    "migrate:atlas:safe": "node scripts/atlasMigration.js --migrate --clear-atlas",
    "migrate:atlas:export": "node scripts/atlasMigration.js --export",
    "migrate:complete": "node scripts/atlasMigrationComplete.js",
    "admin:setup": "node scripts/setupAdminUser.js",
    "db:backup": "./scripts/mongodump_atlas.sh",
    "db:restore": "./scripts/mongorestore_atlas.sh",
    "db:backup:win": "scripts\\mongodump_atlas.bat",
    "db:restore:win": "scripts\\mongorestore_atlas.bat",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@faker-js/faker": "^10.1.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.20.3",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "nodemon": "^3.1.11"
  }
}
